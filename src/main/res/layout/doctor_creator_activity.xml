<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/the_toolbar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbarSize="@dimen/scroll_bar_size"
        android:scrollbarThumbVertical="@color/primary_dark">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-MdCn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="11dp"
                android:text="ADD THE DOCTOR'S BASIC DETAILS"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="18sp" />

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="start|center"
                android:padding="11dp"
                android:text="Select The Doctor's Prefix"
                android:textColor="@android:color/secondary_text_dark"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spnPrefix"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputDoctorsName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="(*) Enter The Doctor's Name"
                android:textColorHint="@android:color/tertiary_text_dark">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtDoctorsName"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start|center"
                    android:inputType="textCapWords"
                    android:padding="11dp"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="start|center"
                android:padding="11dp"
                android:text="Select The Doctor's Gender"
                android:textColor="@android:color/secondary_text_dark"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/rgGender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:padding="11dp">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rdbtnMale"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:gravity="start|center"
                    android:text="Male"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="16sp" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rdbtnFemale"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="Female"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="16sp" />
            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputDoctorsExperience"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="(*) Enter The Doctor's In Years"
                android:textColorHint="@android:color/tertiary_text_dark">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtDoctorsExperience"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start|center"
                    android:inputType="number"
                    android:padding="11dp"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputDoctorsCharges"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="(*) Minimum Charges"
                android:textColorHint="@android:color/tertiary_text_dark">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtDoctorsCharges"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start|center"
                    android:inputType="number"
                    android:padding="11dp"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="(*) Tell us something about the Doctor's Practise"
                android:textColorHint="@android:color/tertiary_text_dark">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtDescription"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="top|start"
                    android:inputType="textCapSentences|textMultiLine"
                    android:lines="5"
                    android:maxLines="10"
                    android:minLines="5"
                    android:padding="11dp"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Choose The Doctor's Profile Picture"
                android:textColor="@android:color/secondary_text_dark"
                android:textSize="15sp" />

            <android.support.v7.widget.CardView
                style="@style/ZenPetsCards"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imgvwDoctorProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="6dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/empty_camera" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>